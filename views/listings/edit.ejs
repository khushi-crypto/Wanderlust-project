<%layout("/layouts/boilerplate")%>
<div class="row mt-3">
   <div class="col-8 offset-2">
   
     <h3>Edit your Listing</h3>
   <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">


      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
         <input name="listing[title]" value="<%=listing.title%>"  type="text" class="form-control" required>
         <div class="valid-feedback">Title looks good</div>
      </div>
      
      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
      <div class="valid-feedback">Title looks good</div>
      </div>

      <div class="mb-3">
          <lable for="image" class="form-label">Image Link</lable>
      <input name="listing[image]" value="<%=listing.image.url%>" type="text" class="form-control" required >
    <div class="valid-feedback">Please enter a valid Link for Image</div>  
    </div>



    <div class="row">
    <div class="mb-3 col-md-4" >
          <lable for="price" class="form-label">Enter price</lable>
      <input name="listing[price]" value="<%=listing.price%>" type="number" class="form-control" required>
    <div class="valid-feedback">Price should be valid</div>
    </div>
     
<div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Enter Country name</lable>
      <input name="listing[country]" value="<%=listing.country%>"  type="text" class="form-control" required>
<div class="valid-feedback">Country name should be valid</div>
    </div>
    </div>



<div class="mb-3">
     <lable for="location" class="form-label">Enter Location</lable>
      <input name="listing[location]" value="<%=listing.location%>"   type="text" class="form-control" required>
<div class="valid-feedback">Location should be valid</div>
    </div>
      
       <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
</div>
</div>
<script src="/js/script.js"></script>
